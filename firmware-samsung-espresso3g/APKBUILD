pkgname=firmware-samsung-espresso3g
pkgver=1
pkgrel=2
pkgdesc="Samsung Galaxy Tab 2 Firmware"
url="https://github.com/TheMuppets/proprietary_vendor_samsung"
arch="armv7"
license="proprietary"
options="!check !strip !archcheck !spdx"

# Source
_commit="89fe5020dbaf2920dece954ce86aa2edf3389852"
_url="https://github.com/TheMuppets/proprietary_vendor_samsung/raw/$_commit/espresso-common/proprietary/system/etc/wifi"
_files="bcmdhd_apsta.bin
	bcmdhd_p2p.bin
	bcmdhd_sta.bin
	nvram_net.txt"
for _i in $_files; do
	source="$source $_i::$_url/$_i";
done

package() {
	mv $srcdir/nvram_net.txt $srcdir/brcmfmac4330-sdio.samsung,espresso3g.txt
	mv $srcdir/bcmdhd_sta.bin $srcdir/brcmfmac4330-sdio.bin
	_files="bcmdhd_apsta.bin
		bcmdhd_p2p.bin
		brcmfmac4330-sdio.bin
		brcmfmac4330-sdio.samsung,espresso3g.txt"
	for _i in $_files; do
		install -Dm644 "$srcdir/$_i" \
			"$pkgdir"/lib/firmware/brcm/"$_i"
	done
}
