# Maintainer: Mighty17 <mightymb17@gmail.com>
# Co-Maintainer: Antoni Aloy <aaloytorrens@gmail.com>
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-espresso3g
pkgdesc="Samsung Galaxy Tab 2 3g (7.0 inch)"
pkgver=0.2
pkgrel=2
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="postmarketos-base linux-samsung-espresso3g mkbootimg"
makedepends="devicepkg-dev"
install="$pkgname.post-install $pkgname.post-upgrade"
source="
	deviceinfo
	01-disable-animations
	"
subpackages="$pkgname-phosh $pkgname-nonfree-firmware:nonfree_firmware""

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-espresso3g"
	mkdir "$subpkgdir"
}

phosh() {
	install_if="$pkgname=$pkgver-r$pkgrel postmarketos-ui-phosh"
	mkdir "$subpkgdir"
	install -Dm755 "$srcdir"/01-disable-animations \
		"$pkgdir"/etc/dconf/db/postmarketos.d/03-disable-animations
}


sha512sums="
